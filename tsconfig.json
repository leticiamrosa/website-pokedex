{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "rootDir": "./src",
      "baseUrl": ".",
      "paths": {
        "@domain/*": ["./src/domain/*"],
        "@data/*": ["./src/data/*"],
        "@infra/*": ["./src/infra/*"],
        "@presentation/*": ["./src/presentation/*"],
        "@components/*": ["./src/presentation/components/*"],
        "@styles/*": ["./src/presentation/styles/*"],
        "@main/*": ["./src/main/*"]
      },
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": [
      "./src/"
    ],
  }